<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40pt"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rincian"
            android:textStyle="bold"
            android:fontFamily="@font/medium"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <!-- Card Container -->
    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_bg"
        android:clipToOutline="true">

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rincian Jadwal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="5dp" />

        <!-- Hotel Image and Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <!-- Hotel Image -->
            <ImageView
                android:id="@+id/iv_hotel_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/venue" />

            <!-- Hotel Name and Booking Details -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvAtasNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Urban Solace"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tvArena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arena 2"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="12px"
            android:layout_height="wrap_content"
            android:text="_____________________________________________________"
            android:textColor="@color/white"/>
        <!-- Reference Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_reference_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp" />
                <TextView
                    android:id="@+id/tvTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1178139371"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_bg"
                    android:layout_marginTop="6pt" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jam (Durasi)"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp" />
                <LinearLayout
                    android:id="@+id/timeContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6pt"
                    android:orientation="horizontal">

                    <!-- Waktu -->
                    <TextView
                        android:id="@+id/tvWaktu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19:00"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:layout_marginEnd="4dp"/>

                    <!-- Durasi -->
                    <TextView
                        android:id="@+id/tvDurasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(1)"
                        android:textColor="#fff"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 1178139371"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_bg"
            android:padding="8dp"
            android:layout_marginTop="90dp" />
        <TextView
            android:id="@+id/biaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 100.000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_bg"
            android:padding="8dp" />
        <!-- Download Button -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batalkan Pesanan"
            android:backgroundTint="#021328"
            android:textColor="#FFFFFF"
            android:layout_marginTop="25dp" />
        <Button
            android:id="@+id/btnBayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bayar Sekarang"
            android:backgroundTint="#021328"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>