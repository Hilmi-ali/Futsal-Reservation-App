<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookingFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40pt"
        android:padding="20dp"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:background="#223ED8"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking"
            android:textStyle="bold"
            android:fontFamily="@font/medium"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:layout_marginTop="20pt"
        android:paddingEnd="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atas Nama"
            android:fontFamily="@font/regular"
            android:textStyle="bold"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textSize="12dp" />
        <EditText
            android:id="@+id/atasNamaInput"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="30px"
            android:background="@drawable/bg_setting"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:layout_marginTop="20dp"
        android:paddingEnd="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:paddingStart="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:fontFamily="@font/regular"/>
        <EditText
            android:id="@+id/tanggalInput"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="30px"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/bg_setting"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:layout_marginTop="20dp"
            android:paddingEnd="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu"
                android:textStyle="bold"
                android:paddingStart="15dp"
                android:fontFamily="@font/regular"
                android:textColor="@color/black"
                android:textSize="12dp" />
            <EditText
                android:id="@+id/waktuInput"
                android:layout_marginTop="3dp"
                android:layout_width="90pt"
                android:paddingStart="30px"
                android:layout_height="48dp"
                android:focusable="false"
                android:clickable="true"
                android:background="@drawable/bg_setting"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:layout_marginTop="20dp"
            android:paddingEnd="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durasi"
                android:paddingStart="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:fontFamily="@font/regular"/>
            <EditText
                android:id="@+id/durasiInput"
                android:layout_marginTop="3dp"
                android:layout_width="50pt"
                android:layout_height="48dp"
                android:paddingStart="30px"
                android:focusable="false"
                android:background="@drawable/bg_setting"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:layout_marginTop="20dp"
        android:paddingEnd="20dp">
        <TextView
            android:paddingStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arena"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:fontFamily="@font/regular"/>
        <EditText
            android:id="@+id/arenaInput"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="30px"
            android:focusable="false"
            android:background="@drawable/bg_setting"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pastikan data yang dimasukkan benar"
        android:layout_marginTop="50pt"
        android:gravity="center"
        android:fontFamily="@font/regular" />
    <Button
        android:id="@+id/bookingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesan"
        android:fontFamily="@font/medium"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_button"
        android:layout_marginTop="4pt"/>
</LinearLayout>