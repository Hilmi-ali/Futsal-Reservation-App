<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Home"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="35px"
        android:paddingStart="50px"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="19pt"
            android:layout_height="19pt"
            android:background="@drawable/bg_avatar"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JJ"
                android:paddingTop="10px"
                android:fontFamily="@font/medium"
                android:textSize="22dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hallo"
            android:textColor="@color/black"
            android:layout_marginStart="25px"
            android:textSize="20dp"
            android:textStyle="bold"/>
            <ImageView
                android:layout_marginTop="5pt"
                android:layout_marginStart="65pt"
                android:layout_width="14pt"
                android:layout_height="14pt"
                android:src="@drawable/message"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:paddingEnd="30pt"
        android:layout_height="wrap_content"
        android:text="Mulai permainanmu, Pesan kapan saja"
        android:fontFamily="@font/semi_bold"
        android:textColor="@color/black"
        android:layout_marginTop="10pt"
        android:paddingStart="50px"
        android:textSize="27dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:radius="12dp"
            android:layout_marginBottom="20px"
            android:elevation="20dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/arena1"
                android:background="@drawable/bg_kontent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/venue"
                    android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arena 1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="5px"
                    android:layout_marginTop="7px"
                    />

                <!-- Teks asli dengan warna putih -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arena 1"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_gravity="top|start"
                     />
            </FrameLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:radius="12dp"
            android:elevation="20dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/arena2"
                android:background="@drawable/bg_kontent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/venue"
                    android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arena 2"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="5px"
                    android:layout_marginTop="7px"
                     />

                <!-- Teks asli dengan warna putih -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arena 2"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_gravity="top|start" />
            </FrameLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:radius="12dp"
            android:elevation="20dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/arena3"
                android:background="@drawable/bg_kontent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/venue"
                    android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arena 3"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="5px"
                    android:layout_marginTop="7px" />

                <!-- Teks asli dengan warna putih -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arena 3"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_gravity="top|start"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
